package istersenyeme.net.yemedeYat.entities;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.Id;
import javax.persistence.Table;
import javax.validation.constraints.NotBlank;
import javax.validation.constraints.NotNull;

import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

@Entity
@Table
@Data
@NoArgsConstructor
@AllArgsConstructor

public class Foods {
	@Id
	@GeneratedValue // otomatik id artirir
	@Column(name = "food_id")
	private int IDFood; // food's ID
	
	@Column(name = "food_name")
	@NotNull
	@NotBlank
	private String foodName; // food's name
	
	@Column(name = "calory_of_food")
	@NotNull
	@NotBlank
	private double caloryofFood; // Kalori degeri
	
	@Column(name = "category_of_food")
	@NotNull
	@NotBlank
	private String categoryofFood; // Yemegin kategori degeri
	
	
}