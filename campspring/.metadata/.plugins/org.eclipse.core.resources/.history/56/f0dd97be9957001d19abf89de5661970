package istersenyeme.net.yemedeYat.entities;

import javax.persistence.Column;
import javax.persistence.Entity;
import javax.persistence.GeneratedValue;
import javax.persistence.Id;
import javax.persistence.Table;
import javax.validation.constraints.NotBlank;
import javax.validation.constraints.NotNull;

import lombok.AllArgsConstructor;
import lombok.Data;
import lombok.NoArgsConstructor;

@Entity
@Table
@Data
@NoArgsConstructor
@AllArgsConstructor

public class Foods {
	@Id
	@GeneratedValue // otomatik id artirir
	@Column(name = "food_id")
	private int IDFood; // yemek ID'si
	
	@Column(name = "food_name")
	@NotNull
	@NotBlank
	private String foodName; // yemegin adi
	
	@Column(name = "category_of_food")
	@NotNull
	@NotBlank
	private String categoryofFood; // yemegin kategorisi
	
	@Column(name = "count_food") 
	@NotNull
	@NotBlank
	private int foodCount; // yemekin bulunma miktari
	
	@Column(name = "food_price")
	@NotNull
	@NotBlank
	private double foodPrice; // yemekin fiyat degeri
	
	@Column(name = "food_allergen")
	@NotNull
	@NotBlank
	private String foodAllergen; // yemegin alerjenlik degeri
	
	
}